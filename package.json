{
  "name": "Pokedex",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "flow": "flow",
    "flow:stop": "flow stop",
    "lint": "eslint src",
    "pretty": "prettier --print-width 100 --single-quote --trailing-comma all --write \"src/**/*.js\""
  },
  "lint-staged": {
    "*.js": [
      "yarn pretty",
      "git add"
    ]
  },
  "dependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.20",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.0.11",
    "@types/react-native": "^0.57.33",
    "axios": "^0.18.0",
    "native-base": "^2.10.0",
    "prop-types": "^15.6.2",
    "react": "16.6.3",
    "react-native": "0.57.8",
    "react-native-elements": "^0.19.1",
    "react-native-gesture-handler": "^1.0.12",
    "react-native-linear-gradient": "^2.5.3",
    "react-native-progress": "^3.5.0",
    "react-native-table-component": "^1.2.0",
    "react-native-tts": "^2.0.0",
    "react-native-vector-icons": "^6.1.0",
    "react-navigation": "^3.0.0",
    "typescript": "^3.2.4"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.17",
    "@types/react-navigation": "^3.0.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "23.6.0",
    "babel-preset-flow": "^6.23.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-typescript": "^0.14.0",
    "flow-bin": "0.78.0",
    "husky": "^1.3.1",
    "jest": "23.6.0",
    "jest-fetch-mock": "^2.1.0",
    "lint-staged": "^8.1.1",
    "metro-react-native-babel-preset": "0.51.1",
    "prettier": "^1.16.3",
    "react-dom": "^16.8.1",
    "react-test-renderer": "16.6.3",
    "ts-jest": "^23.10.5",
    "typescript-eslint-parser": "^22.0.0"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.jest.json"
      }
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|native-base-shoutem-theme|@shoutem/animation|@shoutem/ui|tcomb-form-native)"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "setupFiles": [
      "./tests/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
