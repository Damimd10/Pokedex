{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "types": ["react", "react-native", "jest"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "removeComments": true,
    "declaration": false,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"]
}
